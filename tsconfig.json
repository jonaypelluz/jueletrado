{
    "compilerOptions": {
        "target": "es5",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "baseUrl": ".",
        "paths": {
            "@games/*": ["src/games/*"],
            "@models/*": ["src/models/*"],
            "@hooks/*": ["src/hooks/*"],
            "@config/*": ["src/config/*"],
            "@store/*": ["src/store/*"],
            "@services/*": ["src/services/*"],
            "@tests/*": ["__tests__/*"],
            "@mocks/*": ["__tests__/__mocks__/*"],
            "@context/*": ["src/context/*"]
        }
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        "__tests__/**/*.test.tsx"
    ],
    "exclude": [
        "dist",
        "node_modules",
        "ops/**/*",
        "next.config.js",
        "craco.config.js"
    ]
}
